<div class="gradient-bg pt-5">

  <h1 class="font-weight-bold text-center mt-5 text-white">Edit <%= @movie.title %></h1>
  <div class="d-flex justify-content-center">

    <div class="text-white p-5 container">
      <%= form_for @movie do |f| %>
        <div class="form-row">
        <div class="form-group col-6">
          <%= f.label :title, 'Movie title' %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group col-6">
          <%= f.label :year, 'Year' %>
          <%= f.text_field :year, class: "form-control" %>
        </div>

        <div class="form-group col-6">
          <%= f.label :genre, 'Genre' %>
          <%= f.text_field :genre, class: "form-control" %>
        </div>

        <div class="form-group col-6">
          <%= f.label :language, 'Language' %>
          <%= f.text_field :language, class: "form-control" %>
        </div>

        <div class="form-group col-12">
          <%= f.label :poster, 'Poster' %>
          <%= f.text_field :poster, class: "form-control" %>
        </div>

        <div class="form-group col-6">
          <%= f.label :rating, 'Rating' %>
          <%= f.text_field :rating, class: "form-control" %>
        </div>

        <div class="form-group col-6">
          <%= f.label :director, 'Director' %>
          <%= f.text_field :director, class: "form-control" %>
        </div>

        <div class="form-group col-12">
          <%= f.label :actors, 'Actors' %>
          <%= f.text_field :actors, class: "form-control" %>
        </div>

        <div class="form-group col-12">
          <%= f.label :plot, 'Plot' %>
          <%= f.text_area :plot, class: "form-control" %>
        </div>

        <div class="col-12 d-flex justify-content-center mt-3">
          <button type="submit" class="btn btn-info text-white">Update movie</button>
        </div>
        </div>
      <% end %>
    </div>
  </div>
</div>



