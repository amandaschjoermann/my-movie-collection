<div class="gradient-bg">

  <div class="container pt-3">
    <h1 class="font-weight-bold text-center mt-5 mb-3 text-white"><%= @movie.title %></h1>
    <p class="text-center text-white">Directed by <%= @movie.director %></p>

    <div class="movie-information d-flex bg-white p-5 shadow-sm">
      <%= image_tag @movie.poster, alt: "alttext", height: 350 %>
      <div class="ml-5">
        <div class="d-flex align-items-center font-weight-bold mt-5 mb-3">
          <div>⭐️<%= @movie.rating %></div>
          <div class="mx-5">🍼<%= @movie.year %> </div>
          <div class="mr-5">🏳️<%= @movie.language %> </div>
          <div>🎹<%= @movie.genre %> </div>

        </div>
        <div class="mb-5">📷 <%= @movie.actors %> </div>
        <h5><%= @movie.plot %> </h5>
      </div>
      <div class="back-btn"><%= link_to "Back to all movies", movies_path, class: "small-text btn btn-info text-white" %> </div>
    </div>
  </div>
</div>
